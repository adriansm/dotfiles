#!/usr/bin/env bash

CONFIG="deploy/dotbot.conf.yaml"
APT_BINS="git gcc python ruby zsh vim tmux nvim python pip ctags"
APT_PKGS="git-core build-essential python ruby zsh vim tmux neovim python python-pip exuberant-ctags"

if [ -n "$(command -v X)" ]; then
    # i3 packages
    I3_PKGS="dex xautolock xbacklight i3"
    APT_PKGS+=" $I3_PKGS"
    APT_BINS+=" $I3_PKGS"
fi

BASEDIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

DOTBOT_DIR="$BASEDIR/dotbot"
PLUGIN_DIR="$BASEDIR/plugins"

DOTBOT_BIN="$DOTBOT_DIR/bin/dotbot"

PLUGINS="
    dotbot-brew
    dotbot-conditional
    dotbot-sync
"

DOTBOT_ARGS=
for p in $PLUGINS; do
	DOTBOT_ARGS+=" --plugin-dir $PLUGIN_DIR/$p"
done

function install_linux()
{
    which $APT_BINS 1>/dev/null && return
    echo "Installing required packages"
    sudo apt-get update -y
    sudo apt-get install -y $APT_PKGS
    pip install --user neovim pynvim
}

function run_dotbot()
{
    "${DOTBOT_BIN}" -d "${BASEDIR}" -c "${CONFIG}" $DOTBOT_ARGS $@
}

if [[ "$OSTYPE" == "linux"* ]]; then
    install_linux
fi

# linux brew installation is a mess, just initialize here
if [[ ! -d "$HOME/.linuxbrew" ]]; then
    git clone https://github.com/Homebrew/brew $HOME/.linuxbrew
fi

cd "${BASEDIR}"
if [ "$EUID" -ne 0 ]; then
    # avoid updating modules if running as root
    git submodule update --init --recursive --quiet $DOTBOT_DIR $PLUGIN_DIR
else
    echo "Running as root!"
fi
run_dotbot "${@}"


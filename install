#!/usr/bin/env bash

CONFIG="deploy/dotbot.conf.yaml"

BASEDIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

DOTBOT_DIR="$BASEDIR/dotbot"
PLUGIN_DIR="$BASEDIR/plugins"

DOTBOT_BIN="$DOTBOT_DIR/bin/dotbot"

PLUGINS="
    dotbot-brew
    dotbot-conditional
    dotbot-sync
"

function install_linux()
{
    APT_PKGS="git-core python3 python3-pip"
    dpkg-query -l $APT_PKGS 1>/dev/null 2>&1 || (
        echo "Installing required packages";
        sudo apt-get update -y;
        sudo apt-get install -y $APT_PKGS
    )
    # TODO: use dotbot plugin for pip?
    pip3 install --user -r requirements.txt
}

function run_dotbot()
{
    "${DOTBOT_BIN}" -d "${BASEDIR}" -c "${CONFIG}" $DOTBOT_ARGS $@
}

export INSTALL_TYPE="default"
case $1 in
    minimal | full)
        export INSTALL_TYPE=$1
        shift
        ;;
esac


if [ "$INSTALL_TYPE" != "minimal" ] && [[ "$OSTYPE" == "linux"* ]]; then
    [ -n $(command -v apt-get) ] && PLUGINS+=" dotbot-apt"
    install_linux
fi

cd "${BASEDIR}"
if [ "$EUID" -ne 0 ]; then
    # avoid updating modules if running as root
    git submodule update --init --recursive --quiet $DOTBOT_DIR $PLUGIN_DIR
else
    echo "Running as root!"
fi

DOTBOT_ARGS=
for p in $PLUGINS; do
    DOTBOT_ARGS+=" --plugin-dir $PLUGIN_DIR/$p"
done
run_dotbot "${@}"

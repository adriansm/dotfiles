[core]
	pager = diff-so-fancy | less --tabs=8 -RFX
	whitespace = fix,trailing-space,space-before-tabs,cr-at-eol
	attributesfile = ~/.gitattributes
	excludesfile = ~/.gitignore
	editor = vim
	abbrev = 12

[color]
	branch = auto
	diff = auto
	grep = always
	interactive = always
	pager = true
	showbranch = auto
	status = auto
	ui = auto

[color "interactive"]
	error = red bold

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow
	frag = magenta
	commit = yellow bold
	old = red
	new = green
	whitespace = white reverse

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22

[color "status"]
	added = green
	changed = yellow
	untracked = cyan
	branch = magenta

[diff]
	tool = vimdiff

[difftool]
	prompt = false

[merge]
	tool = vimdiff
	conflictstyle = diff3

[mergetool]
	prompt = false

[log]
	decorate = short

[gitreview]
	track = true
	rebase = false

[alias]
	# branch
	b  = branch
	bc = checkout -b
	bl = branch -av
	bm = branch -m
	bM = branch -M
	bs = show-branch

	# checkout/fetch/merge/push/rebase
	# checkout
	co  = checkout
	# fetch
	f   = fetch
	fm  = pull --rebase --autostash
	# merge
	m   = merge
	# push
	p   = push
	# rebase
	r   = rebase
	ra  = rebase --abort
	rc  = rebase --continue
	ri  = rebase --interactive
	rs  = rebase --skip

	# commit
	c      = commit -v
	ca     = commit --all -v
	cm     = commit --message
	cam    = commit --all --message
	camend = commit --amend --reuse-message HEAD
	cundo  = reset --soft "HEAD^"
	cp     = cherry-pick

	# diff
	d    = diff          # Diff working dir to index
	ds   = diff --staged # Diff index to HEAD
	dh   = diff HEAD     # Diff working dir and index to HEAD

	# index
	s  = status
	a  = add
	ir = reset

	# log
	l   = log --topo-order --pretty=format:'%C(yellow)%h %C(reset)%s %C(green)%cn %C(cyan)%cr%C(reset)'
    # log with files changes
	ls  = log --topo-order --stat --pretty=format:'%C(bold)%C(yellow)Commit:%C(reset) %C(yellow)%H%C(red)%d%n%C(bold)%C(yellow)Author:%C(reset) %C(cyan)%an <%ae>%n%C(bold)%C(yellow)Date:%C(reset)   %C(blue)%ai (%ar)%C(reset)%n%+B'
    # log with diff
	ld  = log --topo-order --stat --patch --full-diff --pretty=format:'%C(bold)%C(yellow)Commit:%C(reset) %C(yellow)%H%C(red)%d%n%C(bold)%C(yellow)Author:%C(reset) %C(cyan)%an <%ae>%n%C(bold)%C(yellow)Date:%C(reset)   %C(blue)%ai (%ar)%C(reset)%n%+B'
    # log with graphs
	lg  = log --graph --pretty=format:'%C(yellow)%h%Creset -%C(magenta)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    # log with all local branches
	lga = log --topo-order --all --graph --pretty=format:'%C(yellow)%h %C(cyan)%cn%C(reset) %s %C(red)%d%C(reset)%n'
    # count number of changes by author
	lh  = shortlog --summary --numbered

	lg1 = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
	lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all

	# remote
	re  = remote

	upload = review --no-topic --track
	fixes = show --no-patch --pretty=fixes

[pretty]
	fixes = Fixes: %h (\"%s\")
	shortlog = format:%C(yellow)%h %Cblue%>(12)%ad %Cgreen%<(7)%aN%Cred%d %Creset%s

[push]
	default = upstream

[url "git@github.com:"]
	insteadof = github:
	pushInsteadOf = "git://github.com/"
	pushInsteadOf = "https://github.com/"

[sendemail]
	smtpencryption = tls
	smtpserver = smtp.gmail.com
	smtpserverport = 587

[include]
	path = ~/.gitconfig.local

[diff-so-fancy]
	markEmptyLines = false
	stripLeadingSymbols = false

[advice]
	detachedHead = false
[user]
	email = adriansm@gmail.com
	name = Adrian Salido

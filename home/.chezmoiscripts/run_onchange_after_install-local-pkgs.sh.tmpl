{{ if and (not .ephemeral) (not (eq .chezmoi.arch "arm")) -}}

{{ $packages := list
      "pynvim" -}}

{{ if not .headless -}}
{{   $packages = concat $packages (list
      "fontawesome") -}}
{{ end -}}

{{ if .i3wm -}}
{{   $packages = concat $packages (list
      "i3ipc") -}}
{{ end -}}

#!/bin/bash

set -eufo pipefail

python3 -m pip install --user --upgrade {{ $packages | join " " }}

# for nvim
yarnpkg global add tree-sitter-cli
{{ end -}}
